<p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :desc %><br />
  <%= f.text_area :desc %>
</p>
<p>
  <%= f.label :phone %><br />
  <%= f.text_field :phone_country_code, :size => 3 %>
  <%= f.text_field :phone_area_code, :size => 3 %>
  <%= f.text_field :phone_number, :size => 10 %>
</p>
<p>
  <%= f.label :rating %><br />
  <%= f.select :rating, ["Select...","1","2","3","4","5"] %>
</p>