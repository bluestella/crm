<html>
<head>
    <title>CRM - Customer Relationship Management</title>
    <%= auto_discovery_link_tag %>
    <%= stylesheet_link_tag 'scaffold' %>
    <%= stylesheet_link_tag 'app' %>
    <%= javascript_include_tag :defaults %>
</head>
<body>
    <h1 id="header">CRM</h1>
    <%= image_tag("indicator.white.gif", :id => "loader", :style => "position: relative; float: left; margin: 7px 15px; display: none") %>
    <ul id="menu">
        <li><%= link_to_unless_current "My Tasks", root_url %></li>
        <li><%= link_to_unless_current "Users", users_url %></li>
        <li><%= link_to_unless_current "Customers", customers_url %></li>
        <li><%= link_to_unless_current "Projects", projects_url %></li>
        <li><%= link_to_unless_current "Tasks", tasks_url %></li>
        <li><%= link_to_unless_current "Contracts", contracts_url %></li>
        <li><%= link_to_unless_current "Logout", logout_url %></li>
    </ul>
    <div id="content"><%= yield %></div>
</body>
</html>